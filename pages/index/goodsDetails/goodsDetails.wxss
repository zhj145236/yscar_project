/* pages/index/goodsDetails/goodsDetails.wxss */
page{
  font-size: 30rpx;
}
swiper-item{
  width:100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  display: block;
}
.goodsDetails{
  border-bottom: 4px solid #e2e2e2;
  padding: 40rpx 0;
  width: 100%;
}
.goodsDetails-view{
  width: 90%;
  margin:0 auto;
}
.goodsDetails-maxTitle{
  font-size: 16px;
  font-weight: 600;
  display: block;
}
.goodsDetails-minTitle{
  color: #858585;
  display: block;
  margin-top: 10rpx;
}
.goodsDetails-price{
  margin-top: 20rpx;
}
.goodsDetails-price-all{
  font-size: 14px;
  color: #ffa028;
  font-weight: 600;
}
.goodsDetails-price-first{
  color: #ffa028;
  margin-left: 10rpx;
}

/* 详情标题 */
.car-info-out{
  border-bottom: 1px solid #e2e2e2;
  width: 100%;
  /* padding: 40rpx 0; */
}
.car-info-view{
  width: 90%;  
  justify-content:space-between;
  display: flex;
  flex-direction:row;
  margin: auto;  
}
.car-info-title{
  padding: 40rpx 0;
  width: 30%;
  /* border:1px solid red; */
  text-align: center;
}
.car-info-title text{
  display: block;
}
.active{
  border-bottom: 2px solid #ffa028;
}

/* 车辆基本信息 */
.basic-info-out{
  width:100%; 
  /* border-bottom: 4px solid #e2e2e2; */
  padding: 20rpx 0;
}
.basic-info-view{
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:flex-start;
  /* border:1px solid #e2e2e2; */
}
.basic-info-view-inside{
  padding: 30rpx 0;
  width: 33.3%;
  text-align: center;
  /* border-bottom: 1px solid #e2e2e2; */
}
.basic-info-view-inside text{
  display: block;
}
.basic-info-view-inside-maxTitle{
  color: #858585;
}
.basic-info-view-inside-minTitle{
  margin-top: 10rpx;
  font-size: 14px;
  font-weight: 600;
}
.car-describe-out{
  width: 100%;

}
.car-describe-out-main{
  border-left: 3px solid #ffa028;
  padding: 30rpx;
  border-bottom: 1px solid #e2e2e2;
  font-size: 14px;
}
.add-style{
  border-bottom: 4px solid #e2e2e2;  
  color: #858585;
}
.chage-add-style{
  width: 90%;
  margin: auto;
  text-align: justify;
  padding: 30rpx 0;
}
.add-style-img image{
  width: 90%;
  display: block;
  margin: auto;
}

/* 底部样式 */
.zw-view{
  width: 100%;
  height: 100rpx;

}
.footer-view{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #e2e2e2;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 10000;
}
.footer-view-icon{
  display: flex;
  flex-direction:row;
  flex-flow:space-between;
}
.footer-view-icon image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 16rpx auto 0 auto;
}
.footer-view-icon-con{
  width: 33.3%;
  text-align: center;
}
.footer-view-icon-con text{
  display: block;
  font-size:24rpx;
}
.footer-view-icon-view{
  display: flex;
  flex-direction:row;
  flex-flow:space-between;
  width:100%;
}
