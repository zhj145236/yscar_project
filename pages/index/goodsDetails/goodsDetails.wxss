/* 详细配置 */
.detailed-con-tex{
  width: 90%;
  display: block;
  font-size: 14px;
  padding:20rpx 0;
  border-bottom: 1px solid #e2e2e2;
  margin: auto;
  font-weight: 600;
}
.detailed-con-tit{
  margin-left: 30rpx;
}
.detailed-con-tit,.detailed-con-name,.detailed-con-val{
  display: block;
}
.detailed-con-val{
  margin-left: 100rpx;
}
.detailed-con-tex-view{
  display: flex;
  flex-direction:row;
  justify-content:flex-end;
  width: 90%;
  margin:auto;
  padding: 20rpx 0;
  border-bottom: 1px solid #e2e2e2;
}
.detailed-con-tex-con{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  border-bottom: 1px solid #e2e2e2;
  padding: 20rpx 0;
}
.set-allocation{
  width: 90%;
  margin: auto;
}
.addClass{
  color: #ffa028;
}

/* 车辆视频 */
.car-vido{
  width: 90%;
  margin: auto;
}
#ysvideo{
  width: 100%;
}
.car-ysvideo{
  margin: 20rpx 0;
}
.car-vido-name{
  font-size: 14px;
  font-weight: 600;
  padding: 20rpx 0;
  border-bottom: 1px solid #e2e2e2;
  display: block;
}
.car-ysvideo-img image{
  display: block;
  width: 100%;
}
.zf-btn{
  display: block;
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid red; */
  border-radius: 100%;
  padding: 0;
  margin: 0;
  position: fixed;
  right:20rpx;
  top: 50%;
  margin-top: -50rpx;
  z-index: 2;
  border:none;
}
button[plain]{ border:0 }
/* botton::after{
