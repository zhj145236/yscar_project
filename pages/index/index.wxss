/**index.wxss**/
page{
  font-size: 30rpx;
}
.banner{
  position: relative;
  height: 336rpx;
}
.banner-img{
  width:100%;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.banner-swiper{
  width: 100%;
  margin-left:auto;
  margin-right: auto;
  position: absolute;
  top: 140rpx;
  left: 50%;
  margin-left: -50%;
}
.slide-image{
  width: 100%;
  display: block;
  height: 200rpx;
}
.search{
  display:flex;
  justify-content: space-between;
  position: absolute;
  top: 38rpx;
  z-index: 1;
  width: 90%;
  /* border: 1px solid red; */
}
.search-set{
  width: 90%;
  margin: auto;
}
.set{
  display:flex;
  justify-content: flex-start;
  background: #fff;
  height: 80rpx;
  width: 500rpx;
  border-radius: 10rpx;
}
.search-icon{
  display: inline-block;
  vertical-align: middle;
}
.search-icon-inp{
  width: 130rpx;
  height: 80rpx;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
  margin-right: 0;
  color: #1f9bde;
  font-size: 30rpx;
  right: 0;
  display: block;
}
.change-icon{
  margin-left:40rpx;
  margin-right: 20rpx;
  margin-top: 22rpx;
  width: 1rem;
  height: 1rem;
}
.search-inp{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}

/* 筛选 */
.scre-vivew-img{
  width: 32rpx;
  height: 18rpx;
}
.scre{
  width: 90%;
  margin-left: auto;
  margin-right:auto;
  display: flex;
  justify-content:space-between;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.scre-view-text{
  text-align: center;
}
.scre-vivew-img{
  margin-left: 30rpx;
}
.notBrand{
  color:#858585;
}

/* 分割块 */
.fenge-view{
  width: 100%;
  height: 24rpx;
  background: #f2f2f2;
}

/* 产品列表 start */
.filtrate-car-con-out{
  width: 90%;
  margin: auto;
}
.no-info{
  padding: 30rpx 0;
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:space-between;
  width:50%;
  margin: auto;
  align-items:center;
  color: #858585;
}
.no-info image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx 0 0;
}
.filtrate-car-con-out-data{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  border-bottom: 1px solid #e2e2e2;
  padding: 30rpx 0;
}
.filtrate-car-con-out-data-left{
  width:80%;
}
.filtrate-car-con-out-data-left-img{
  width: 90%;
  height: 100%;
}
.filtrate-car-con-out-data-left-img image{
  display: block;
  width: 100%;
  height: 100%;
}
.filtrate-car-con-out-data-right-maxTitle{
  font-size: 35rpx;
}
.filtrate-car-con-out-data-right-maxTitle,.filtrate-car-con-out-data-right-minTitle{
  display: block;
}
.filtrate-car-con-out-data-right-minTitle{
  font-size: 30rpx;
  color: #858585;
  margin: 10rpx 0;
}
.filtrate-car-con-out-data-right{
  width: 100%;
}
.filtrate-car-con-out-data-right-allprice{
  font-size: 35rpx;
  color: #ffa028;
}
.filtrate-car-con-out-data-right-firstprice{
  color: #ffa028;
  margin-left: 10rpx;
}
/* 产品列表 end */

/* 遮罩层 */
.mask-view{
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%; 
  z-index: 1;
  background: rgba(0,0,0,0.5);
}

.active{
  color: #ff6600;
}
/* 点击展示内容 */
.closeMask-view{
  width: 80%;
  height: 100%;
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 2;
  opacity:1;
}
.closeMask-view image{
  position: fixed;
  display: block;
  width: 80rpx;
  height: 100rpx;
  left: 0rpx;
}

/* 排序样式 */
.again-top-view{
  border-bottom:1px solid #e2e2e2;
  padding: 30rpx 0;
  background-color: #efefef;
}
.again-top{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  width: 90%;
  margin: auto;
}
.againBtn{
  display: block;
  padding: 0;
  margin:0;
  font-size:26rpx;
  background: #1f9bde;
  color: #fff;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
}
.showCon{
  width: 100%;
}
.agent-view{
  font-size:30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.showCon-view{
  padding: 30rpx 0 30rpx 40rpx;
  border-bottom: 1px solid #e2e2e2;
  font-size: 14px;
}
.radio-group{
  width:100%;
  justify-content:flex-start;
}
.radio{
  display: block;
  padding: 30rpx 0 30rpx 40rpx;
  border-bottom: 1px solid #e2e2e2;
  /* width:100%; */
}
.chang-radio-group{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  width: 100%;
  padding: 0 0 20rpx 0;
}
.chang-radio-group .radio{
  width: 32%;
}
.radio text{
  font-size: 26rpx;
}
.chang-radio{
  border-bottom: none;
}
.chang-showCon{
  border-bottom:1px solid #e2e2e2;
}
.chang-showCon-view{
  padding: 30rpx 0 30rpx 40rpx;
  font-size: 26rpx;
}
.text{
  text-align: right;
  /* margin-left: 20%; */
  width: 100%;
  display: block;
  color: #666666;
}
.bottom-btn{
  display: flex;
  justify-content:space-between;
  /* border: 1px solid #e2e2e2; */
}
.but-submit{
  font-size: 16px;
  width:45%;
  background: #ffa028;
  color: #fff;
  margin: 20rpx auto 40rpx auto;
  display: block;
  padding: 4rpx 0;
}
.reset-btn{
  color: #666666;
  background: #efefef;
}






















