/* pages/me/me.wxss */
page{
  font-size: 30rpx;
}
.me-img{
  width: 100%;
  position: relative;
}
.me-img image{
  display: block;
  width: 100%;
  height: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
}
.userinfo > button{
  display: block;
  border-radius: 100%;
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  font-size: 12px;
  line-height: 160rpx;
  position: absolute;
  top:50%;
  margin-top: -80rpx;
  left: 50%;
  margin-left: -80rpx;
}
.userinfo-view{
  position: absolute;
  left: 80rpx;
  top:50%;
  margin-top: -70rpx;
  display: flex;
  flex-direction: row;

}
.userinfo-img{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 100%;
}
.userinfo-img image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  margin-top:10rpx;
}
.userinfo-avatar {
  border-radius: 50%;
  display:block;
}
.userinfo-nickname text{
  font-size: 14px;
  color: #fff;
  display: block;
  height: 140rpx;
  line-height: 140rpx;
  margin-left: 20rpx;
}

/* 个人中心 */
.me-center-con{
  width: 90%;
  margin:0 auto;
}
.me-center-con-data{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  align-content:center;
  border-bottom: 1px solid #e2e2e2;
  padding: 40rpx 0;
}
.me-center-con-data-view{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  align-content:center;
}
.me-center-con-data-view text{
  margin-left: 20rpx;
}
.me-center-con-next image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.me-center-con-data-view image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}